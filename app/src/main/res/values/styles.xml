<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_25sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_25sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_25sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_25sdp</item>
        <item name="errorEnabled">true</item>
        <item name="counterEnabled">true</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>


    </style>

    <style name="inputFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">User Name</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableStart">@drawable/round_person_24</item>
        <item name="android:drawablePadding">@dimen/_2sdp</item>
    </style>
</resources>